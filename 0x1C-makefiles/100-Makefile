CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re all

re: fclean all

clean:
	$(RM) *.swp *.swo *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
